<mvc:View
    controllerName="sapui5.training.helloworld.controller.App"
    xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <App>
        <pages>
            <Page>
                <VBox justifyContent="Center" alignItems="Center" class="sapUiSmallMargin">
                    <Input value="{/recipient/name}" description="" fieldWidth="100%"
                        valueLiveUpdate="true" />
                    <Button text="{i18n>buttonSayHello}" press="onButtonPress" />
                </VBox>
            </Page>
        </pages>
    </App>
</mvc:View>
